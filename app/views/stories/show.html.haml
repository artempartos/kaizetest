- with_options :scope => :story do |st|
  %h1
    %b
      =@story.title
  %p
    %b #{ st.t(:description) << ':'}
    = @story.description
  %p
    %b #{ st.t(:deadline) << ':'}
    = @story.deadline
  %p
    %b
      = st.t(:creator) << ':'
    =link_to @story.creator.name, @story.creator
  %p
    %b
      = st.t(:performer) << ':'
    =link_to @story.performer.name, @story.performer
  %p
    %b
      = st.t(:created) << ':'
    = @story.created_at
  %p
    %b
      = st.t(:updated) << ':'
    = @story.updated_at
  %p
    %b
      = st.t(:state) << ':'
    = @story.human_state_name
    - if creator?(@story) || performer?(@story)
      =@story.state_events.each_with_object(nil) do |e|
        =link_to e.human_event_name, story_path(:id => @story.id, :event => e), :class => "btn btn-primary"
  %h4
    = st.t(:comments) << ':'
  = render 'comments/comment_form'
  - if @comments.present?
    %table.microposts
      = render @comments
      = paginate @comments