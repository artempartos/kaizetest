%h1
  %b
    =@story.title
%p
  %b Title:
  = @story.title
%p
  %b Description:
  = @story.description
%p
  %b Deadline:
  = @story.deadline
%p
  %b Creator:
  =link_to @story.creator.name, @story.creator
%p
  %b Performer:
  =link_to @story.performer.name, @story.performer
%p
  %b Was created:
  = @story.created_at
%p
  %b Was updated:
  = @story.updated_at
%p
  %b State:
  = @story.state
- if creator?(@story)
  =@story.state_events.each_with_object(nil) do |e|
    =link_to e, story_path(:id => @story.id, :event => e),  :class => "btn btn-primary" if e==:start
    =link_to e, story_path(:id => @story.id, :event => e), :class => "btn btn-danger" if e==:reject
    =link_to e, story_path(:id => @story.id, :event => e), :class => "btn btn-info" if e==:finish
    =link_to e, story_path(:id => @story.id, :event => e), :class => "btn btn-success" if e==:accept
- elsif performer?(@story)
  =@story.state_events.each_with_object(nil) do |e|
    =link_to e, story_path(:id => @story.id, :event => e),  :class => "btn btn-primary" if e==:start
    =link_to e, story_path(:id => @story.id, :event => e), :class => "btn btn-info" if e==:finish
%h4 Комментарии:
= render 'story_comments/comment_form'
- if @comments.present?
  %table.microposts
    = render @comments
    = will_paginate @comments