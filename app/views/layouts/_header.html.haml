%header
  %nav.round
    %ul.nav.nav-tabs
      -if request.fullpath == root_path
        %li.active
          %a{:href => root_path}
            %i.icon-home
            Home
      - else
        %li
          %a{:href => root_path}
            %i.icon-home
            Home

      -if request.fullpath == users_path
        %li.active
          %a{:href => users_path}
            %i.icon-user
            Users
      - else
        %li
          %a{:href => users_path}
            %i.icon-user
            Users

      - if signed_in?

        -if request.fullpath == "#"
          %li.active
            %a{:href => root_path}
              %i.icon-briefcase
              Projects
        -else
          %li
            %a{:href => root_path}
              %i.icon-briefcase
              Projects

        -if request.fullpath == user_path(current_user)
          %li.active
            %a{:href => user_path(current_user)}
              %i.icon-pencil
              Profile
        -else
          %li
            %a{:href => user_path(current_user)}
              %i.icon-pencil
              Profile

        -if request.fullpath == edit_user_path(current_user)
          %li.active
            %a{:href => edit_user_path(current_user)}
              %i.icon-wrench
              Settings
        -else
          %li
            %a{:href => edit_user_path(current_user)}
              %i.icon-wrench
              Settings

        -if request.fullpath == signout_path
          %li.active
            %a{:href => signout_path}
              %i.icon-hand-up
              Sign out
        -else
          %li
            %a{:href => signout_path}
              %i.icon-hand-up
              Sign out

      - else
        -if request.fullpath == signin_path
          %li.active
            %a{:href => signin_path}
              %i.icon-hand-down
              Sign in
        -else
          %li
            %a{:href => signin_path}
              %i.icon-hand-down
              Sign in


