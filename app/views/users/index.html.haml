- with_options :scope => :users do |us|
  %h1 #{t 'header.users'}
  = search_form_for @q do |f|
    = f.text_field :name_cont, placeholder: t('search.name')
    = f.text_field :email_cont, placeholder: t('search.email')
    = f.submit  :class => "btn btn-info btn-mini", :value => t(:filter)
    = link_to t(:no_filter), users_path, :class => "btn btn-info btn-mini"

  = paginate @users
  %table.table.table-striped.users.round
    %thead
      %tr
        %td
          %b
            = sort_link @q, :name
        %td
          %b
            = sort_link @q, :email
    %tbody
      = render @users
  = paginate @users